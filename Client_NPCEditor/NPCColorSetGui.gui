function NPCColorSetGui::onWake(%this)
{
   if (!%this.initialized)
   {
      %this.initialized = 1;
      %this.load();
   }
   %this.Display();
   if (NPCcolorSetGui_option0.getValue() == 0.0 && NPCcolorSetGui_option1.getValue() == 0.0)
   {
      NPCcolorSetGui_option0.setValue(1);
   }
   NPCColorSetGui.selectColor(0);
}

