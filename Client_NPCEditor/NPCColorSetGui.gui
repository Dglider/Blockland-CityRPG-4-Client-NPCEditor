function NPCColorSetGui::save(%this)
{
   export("$NPCAvatar::*", "config/client/npcAvatarColors.cs");
}

function NPCColorSetGui::load(%this)
{
   if (isFile("config/client/npcAvatarColors.cs"))
   {
      exec("config/client/npcAvatarColors.cs");
   }
   else
   {
      %this.defaults();
      %this.save();
   }
}

